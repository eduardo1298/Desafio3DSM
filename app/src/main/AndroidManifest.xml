        android:supportsRtl="true"
        android:theme="@style/Theme.CarsMotos"
        tools:targetApi="31">
        <activity
            android:name=".login.SignInActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".login.SignUpActivity"
            android:exported="false"
            android:label="Registro de Usuarios"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".MarcasActivity"
            android:exported="false"
            android:label="Listado de Marcas Disponibles"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".MarcasCRUD"
            android:exported="false"
            android:label="Marcas"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ColoresCRUD"
            android:exported="false"
            android:label="Colores"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ColoresActivity"
            android:exported="false"
            android:label="Listado de Colores Disponibles"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".TipoAutoActivity"
            android:exported="false"
            android:label="Listado de Tipos de Automoviles Disponibles"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".TipoAutoCRUD"
            android:exported="false"
            android:label="Tipos de Automovil"
            android:theme="@style/Theme.AppCompat.Light" />
    </application>

</manifest>